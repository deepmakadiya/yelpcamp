<%- include ('partials/header.ejs') %>




<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp</h1>
				<p>View our handpicked campground from around the world</p>
				<p>
					<a class="btn btn-primary btn-small" href="/campgrounds/new/">Add new campground</a>
				</p>
		</div>
		
	</header>

<div class="row">
	<% campgrounds.forEach(function(campgrounds) { %>
		<div class="col-md-3 col-sm-6">
			
			<div class="card">
				<img class="card-img-top" src="<%= campgrounds.image %>">
				<div class="card-body" >
					<h4 class="card-title"><%= campgrounds.name %></h4>
				</div>
			</div>
			
		</div>
	
	<% }); %>
</div>





</div>
<%- include ('partials/footer.ejs') %>